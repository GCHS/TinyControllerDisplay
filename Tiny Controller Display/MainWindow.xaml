<Window x:Class="Tiny_Controller_Display.ControllerDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tiny_Controller_Display"
        mc:Ignorable="d"
        Height="37px" Width="57px"
        ResizeMode="NoResize" Background="{x:Null}" AllowsTransparency="True" WindowStyle="None" MouseDown="Window_MouseDown" Topmost="True" Closing="Window_Closing">
	<Window.Resources>
		<local:ControllerType x:Key="artFolder"/>
		<local:Concatenater x:Key="Concatenater"/>
	</Window.Resources>
	<Grid>
		<Image x:Name="leftBumper" DataContext="{DynamicResource artFolder}" Source="{Binding Path=FolderName, ConverterParameter='/left_bumper.png', Converter={StaticResource Concatenater}, Mode=OneWay}" Stretch="Uniform" Width="57px" Height="37px">
			<Image.RenderTransform>
				<TranslateTransform x:Name="leftBumperTranslation"/>
			</Image.RenderTransform>
		</Image>
		<Image x:Name="rightBumper" DataContext="{DynamicResource artFolder}" Source="{Binding Path=FolderName, ConverterParameter='/right_bumper.png', Converter={StaticResource Concatenater}, Mode=OneWay}" Stretch="Uniform" Width="57px" Height="37px">
			<Image.RenderTransform>
				<TranslateTransform x:Name="rightBumperTranslation"/>
			</Image.RenderTransform>
		</Image>

		<Image x:Name="faceplate" DataContext="{DynamicResource artFolder}" Source="{Binding Path=FolderName, ConverterParameter='/faceplate.png', Converter={StaticResource Concatenater}, Mode=OneWay}" Stretch="Uniform" Width="57px" Height="37px" />
		
		<Image x:Name="bottomButton" DataContext="{DynamicResource artFolder}" Source="{Binding Path=FolderName, ConverterParameter='/bottom_button.png', Converter={StaticResource Concatenater}, Mode=OneWay}" Stretch="Uniform" Width="57px" Height="37px"/>
		<Image x:Name="dPad" DataContext="{DynamicResource artFolder}" Source="{Binding Path=FolderName, ConverterParameter='/dpad.png', Converter={StaticResource Concatenater}, Mode=OneWay}" Stretch="Uniform" Width="57px" Height="37px">
			<Image.RenderTransform>
				<TranslateTransform x:Name="dPadTranslation"/>
			</Image.RenderTransform>
		</Image>
		<Image x:Name="leftButton" DataContext="{DynamicResource artFolder}" Source="{Binding Path=FolderName, ConverterParameter='/left_button.png', Converter={StaticResource Concatenater}, Mode=OneWay}" Stretch="Uniform" Width="57px" Height="37px"/>
		<Image x:Name="leftStickwellPressed" DataContext="{DynamicResource artFolder}" Source="{Binding Path=FolderName, ConverterParameter='/left_stickwell_pressed.png', Converter={StaticResource Concatenater}, Mode=OneWay}" Stretch="Uniform" Width="57px" Height="37px" />
		<Image x:Name="leftSticktop" DataContext="{DynamicResource artFolder}" Source="{Binding Path=FolderName, ConverterParameter='/left_sticktop.png', Converter={StaticResource Concatenater}, Mode=OneWay}" Stretch="Uniform" Width="57px" Height="37px">
			<Image.RenderTransform>
				<TranslateTransform x:Name="leftSticktopTranslation"/>
			</Image.RenderTransform>
		</Image>
		<Image x:Name="leftSticktopPressed" DataContext="{DynamicResource artFolder}" Source="{Binding Path=FolderName, ConverterParameter='/left_sticktop_pressed.png', Converter={StaticResource Concatenater}, Mode=OneWay}" Stretch="Uniform" Width="57px" Height="37px">
			<Image.RenderTransform>
				<TranslateTransform x:Name="leftSticktopPressedTranslation"/>
			</Image.RenderTransform>
		</Image>
		<Image x:Name="rightButton" DataContext="{DynamicResource artFolder}" Source="{Binding Path=FolderName, ConverterParameter='/right_button.png', Converter={StaticResource Concatenater}, Mode=OneWay}" Stretch="Uniform" Width="57px" Height="37px"/>
		<Image x:Name="rightStickwellPressed" DataContext="{DynamicResource artFolder}" Source="{Binding Path=FolderName, ConverterParameter='/right_stickwell_pressed.png', Converter={StaticResource Concatenater}, Mode=OneWay}" Stretch="Uniform" Width="57px" Height="37px"/>
		<Image x:Name="rightSticktop" DataContext="{DynamicResource artFolder}" Source="{Binding Path=FolderName, ConverterParameter='/right_sticktop.png', Converter={StaticResource Concatenater}, Mode=OneWay}" Stretch="Uniform" Width="57px" Height="37px">
			<Image.RenderTransform>
				<TranslateTransform x:Name="rightSticktopTranslation"/>
			</Image.RenderTransform>
		</Image>
		<Image x:Name="rightSticktopPressed" DataContext="{DynamicResource artFolder}" Source="{Binding Path=FolderName, ConverterParameter='/right_sticktop_pressed.png', Converter={StaticResource Concatenater}, Mode=OneWay}" Stretch="Uniform" Width="57px" Height="37px">
			<Image.RenderTransform>
				<TranslateTransform x:Name="rightSticktopPressedTranslation"/>
			</Image.RenderTransform>
		</Image>
		<Image x:Name="selectButton" DataContext="{DynamicResource artFolder}" Source="{Binding Path=FolderName, ConverterParameter='/select_button.png', Converter={StaticResource Concatenater}, Mode=OneWay}" Stretch="Uniform" Width="57px" Height="37px"/>
		<Image x:Name="startButton" DataContext="{DynamicResource artFolder}" Source="{Binding Path=FolderName, ConverterParameter='/start_button.png', Converter={StaticResource Concatenater}, Mode=OneWay}" Stretch="Uniform" Width="57px" Height="37px"/>
		<Image x:Name="topButton" DataContext="{DynamicResource artFolder}" Source="{Binding Path=FolderName, ConverterParameter='/top_button.png', Converter={StaticResource Concatenater}, Mode=OneWay}" Stretch="Uniform" Width="57px" Height="37px"/>
		<Image x:Name="leftTrigger" DataContext="{DynamicResource artFolder}" Source="{Binding Path=FolderName, ConverterParameter='/left_trigger.png', Converter={StaticResource Concatenater}, Mode=OneWay}" Stretch="Uniform" Width="57px" Height="37px">
			<Image.Clip>
				<RectangleGeometry Rect="0,0,57,37"/>
			</Image.Clip>
		</Image>
		<Image x:Name="rightTrigger" DataContext="{DynamicResource artFolder}" Source="{Binding Path=FolderName, ConverterParameter='/right_trigger.png', Converter={StaticResource Concatenater}, Mode=OneWay}" Stretch="Uniform" Width="57px" Height="37px">
			<Image.Clip>
				<RectangleGeometry Rect="0,0,57,37"/>
			</Image.Clip>
		</Image>
		<Rectangle x:Name="rightClickMenuHolder" Fill="#0000" HorizontalAlignment="Left" Height="37" VerticalAlignment="Top" Width="57">
			<Rectangle.ContextMenu>
				<ContextMenu>
					<MenuItem x:Name="Controller1Toggle" Header="Controller 1" IsCheckable="True" Click="Controller1Toggle_Click"/>
					<MenuItem x:Name="Controller2Toggle" Header="Controller 2" IsCheckable="True" Click="Controller2Toggle_Click"/>
					<MenuItem x:Name="Controller3Toggle" Header="Controller 3" IsCheckable="True" Click="Controller3Toggle_Click"/>
					<MenuItem x:Name="Controller4Toggle" Header="Controller 4" IsCheckable="True" Click="Controller4Toggle_Click"/>

					<Separator/>
					
					<Label Content="Controller Type:"/>
					<ListBox x:Name="controllerTypeChanger" SelectionChanged="controllerTypeChanger_SelectionChanged">
						<ListBoxItem Content="XBOX One Elite" IsSelected="True">
							<ListBoxItem.Tag>
								<local:ControllerType Type="XB1Elite"/>
							</ListBoxItem.Tag>
						</ListBoxItem>
						<ListBoxItem Content="DualShock 4 Revision 2">
							<ListBoxItem.Tag>
								<local:ControllerType Type="DS4Rev2"/>
							</ListBoxItem.Tag>
						</ListBoxItem>
						<ListBoxItem Content="Dualsense">
							<ListBoxItem.Tag>
								<local:ControllerType Type="Dualsense"/>
							</ListBoxItem.Tag>
						</ListBoxItem>
					</ListBox>

					<Separator/>

					<MenuItem x:Name="MoveDisplaysTogetherToggle" Header="Move Displays Together" IsCheckable="True" Click="UnifiedMovementToggle_Click"/>
				</ContextMenu>
			</Rectangle.ContextMenu>
		</Rectangle>
	</Grid>
</Window>
